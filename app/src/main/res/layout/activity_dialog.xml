<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/show_left_bottom_dialog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="显示左下角弹窗 "
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/hide_left_bottom_dialog"
        app:layout_constraintTop_toTopOf="@id/show_left_bottom_dialog"
        app:layout_constraintStart_toEndOf="@id/show_left_bottom_dialog"
        android:text="隐藏左下角弹窗 "
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/show_right_bottom_dialog"
        app:layout_constraintStart_toStartOf="@id/show_left_bottom_dialog"
        app:layout_constraintTop_toBottomOf="@id/show_left_bottom_dialog"
        android:text="显示右下角弹窗 "
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/hide_right_bottom_dialog"
        app:layout_constraintTop_toTopOf="@id/show_right_bottom_dialog"
        app:layout_constraintStart_toEndOf="@id/show_right_bottom_dialog"
        android:text="隐藏右下角弹窗 "
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>